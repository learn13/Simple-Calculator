<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2pt" >

    <ImageView
        android:id="@+id/imagetop"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/calc_cover2"/>

    <EditText
        android:id="@+id/proses_layar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imagetop"
        android:layout_marginTop="20sp"
        android:gravity="left"
        android:inputType="text"
        android:paddingTop="30sp"
        android:textAlignment="viewEnd" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proses_layar"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:text="="
        android:textSize="12pt" />
    <EditText
        android:id="@+id/txt_layar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20sp"
        android:gravity="right"
        android:layout_toRightOf="@+id/label"
        android:layout_below="@+id/proses_layar"
        android:inputType="text" />

    <Button
        android:id="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_layar"
        android:layout_marginLeft="20sp"
        android:width="10pt"
        android:text="+"
        android:textSize="18sp" />

    <Button
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_layar"
        android:layout_toRightOf="@+id/plus"
        android:width="10pt"
        android:text="-"
        android:textSize="18sp" />

    <Button
        android:id="@+id/kali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_layar"
        android:layout_toRightOf="@+id/min"
        android:width="10pt"
        android:text="x "
        android:textSize="18sp" />

    <Button
        android:id="@+id/bagi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_layar"
        android:layout_toRightOf="@+id/kali"
        android:width="10pt"
        android:text="/ "
        android:textSize="18sp" />

    <Button
        android:id="@+id/c"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="556dp"

        android:layout_marginBottom="50dp"
        android:text="C  "
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp" />

    <Button
        android:id="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus"
        android:layout_marginLeft="20sp"
        android:width="10pt"
        android:text="1"
        android:textSize="18sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus"
        android:layout_toRightOf="@+id/one"
        android:width="10pt"
        android:text="2"
        android:textSize="18sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus"
        android:layout_toRightOf="@+id/two"
        android:width="10pt"
        android:text="3"
        android:textSize="18sp" />

    <Button
        android:id="@+id/four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/plus"
        android:layout_toRightOf="@+id/three"
        android:width="10pt"
        android:text="4"
        android:textSize="18sp" />

    <Button
        android:id="@+id/five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_marginLeft="20sp"
        android:width="10pt"
        android:text="5"
        android:textSize="18sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/five"
        android:width="10pt"
        android:text="6"
        android:textSize="18sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/six"
        android:width="10pt"
        android:text="7"
        android:textSize="18sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/seven"
        android:width="10pt"
        android:text="8"
        android:textSize="18sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_marginLeft="20sp"
        android:width="10pt"
        android:text="9"
        android:textSize="18sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/nine"
        android:width="10pt"
        android:text="0"
        android:textSize="18sp" />

    <Button
        android:id="@+id/koma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/five"
        android:layout_toRightOf="@+id/zero"
        android:width="10pt"
        android:text="."
        android:textSize="18sp" />

    <Button
        android:id="@+id/sd"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/five"
        android:layout_marginTop="150dp"
        android:text="="
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>